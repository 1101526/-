void  Reducto(int *p,char name[10])        //粉身碎骨   2
{
    system("cls");
    system("color 0F");
    printf("%s: Reducto!\n",name);
   for(int i=0;i<5;i++)
    {*p-=150;
     printf("嘎达,嘎达,嘎....\n");
     Sleep(150);
     *p-=150;
     printf("嗙，砰，DuangDuangDuang....\n");
     Sleep(150);}
    printf("\n对手HP-1000\n这个魔法仿佛有搅碎对手的力量。\n");
    Sleep(1500);
}
