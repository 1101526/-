void Avada_Kedavra(int *p)                        //啃大瓜
{   system("cls");
    system("color 72");
    printf("Lord Voldemort: Avada Kedavra!!!!!!\n");
    *p=1;
    for(int i=0;i<6;i++)
    {system("color 02");
     Sleep(500);
     printf("“啊！！！”\n");
     system("color 72");
     Sleep(500);
    }system("color 0C");
    printf("“索命咒”黑魔法师威力最高的魔法，一切生物，一击必死......但作为预言之子的你！仍有一缕意识！（HP减至1）");
    Sleep(1000);
}
