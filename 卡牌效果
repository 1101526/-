void Sectumsempra(int *p,char name[10])                   //神锋无影   2
{
    system("cls");
    system("color 0F");
    int i=0;
    printf("%s: Sectumsempra!\n",name);
    Sleep(1000);
    for(;i<4;i++)
    {
        *p-=500;
        printf("凌冽的刀光切割了对手！对方HP-500\n");
        Sleep(1000);
    }Sleep(1000);
}
