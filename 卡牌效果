void Golden_snitch(int *p,char name[10])              //金色飞贼    0
{
    system("cls");
    system("color 06");
    *p+=2;
    printf("%s: Golden snitch!\n",name);
    Sleep(1000);
    printf("这是最珍贵的游走球！\n",name);
    Sleep(1000);
    printf("活力泉涌！魔力值+2\n",name);
    Sleep(1000);
}
